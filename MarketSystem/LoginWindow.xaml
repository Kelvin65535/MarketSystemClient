<Window x:Class="MarketSystem.Properties.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketSystem.Properties"
        mc:Ignorable="d"
        Title="用户登录" Height="300" Width="300">
    <Grid>
        <Label x:Name="labelUsername" Content="用户名：" HorizontalAlignment="Left" Margin="52,83,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelPassword" Content="密码：" HorizontalAlignment="Left" Margin="52,128,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textboxUsername" HorizontalAlignment="Left" Height="23" Margin="123,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textboxPassword" HorizontalAlignment="Left" Height="23" Margin="123,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnLogin" Content="登录" HorizontalAlignment="Left" Margin="110,185,0,0" VerticalAlignment="Top" Width="75" Click="btnLogin_Click"/>

    </Grid>
</Window>
